[package]
name = "theme-gtk"
version = "1.0.0"
description = "GTK theme configuration for Tokyo Night"
category = "theme"

[changelog]
"1.0.0" = "Tokyo Night GTK theme configuration"

[files]
managed = [
    ".config/gtk-3.0/settings.ini",
    ".config/gtk-4.0/settings.ini"
]

[dependencies]
requires = []
optional = ["wm-hypr"]

[metadata]
last_updated = "2025-12-17"
author = "Christian"
blast_radius = "low"

[blast_impact]
failure_modes = [
    "GTK apps use default theme",
    "Visual inconsistency"
]
recovery_path = "git restore theme-gtk/"

[retention]
rarely_used = false
justification = "Provides visual consistency across GTK applications"
review_date = ""
