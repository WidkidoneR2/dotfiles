[user]
    name = Christian
    email = christianwilliams1001@tuta.com

[init]
    defaultBranch = main

[core]
    editor = nvim
    pager = delta
    autocrlf = input
    whitespace = trailing-space,space-before-tab

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[fetch]
    prune = true

[rebase]
    autoStash = true

[merge]
    conflictstyle = diff3
    tool = nvimdiff

[diff]
    colorMoved = default
    tool = nvimdiff

