[package]
name = "notif-mako"
version = "1.0.0"
description = "Mako notification daemon configuration"
category = "desktop"

[changelog]
"1.0.0" = "Initial configuration with Tokyo Night theme"

[files]
managed = [
    ".config/mako/config"
]

[dependencies]
requires = ["wm-hypr"]
optional = []

[metadata]
last_updated = "2025-12-17"
author = "Christian"
blast_radius = "medium"

[blast_impact]
failure_modes = [
    "No notifications displayed",
    "Visual feedback lost",
    "System alerts missed"
]
recovery_path = "git restore notif-mako/ && killall mako && mako"

[retention]
rarely_used = false
justification = "Essential for system notifications"
review_date = ""
