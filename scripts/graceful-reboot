#!/bin/bash
# Graceful system reboot - v2 (simplified, no audio stops)
# Part of Faelight Forest 0-Core

set -e

LOGFILE="$HOME/0-core/logs/power.log"

log() {
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] $*" | tee -a "$LOGFILE"
}

log "ðŸ”„ Graceful reboot initiated by $USER"

# Sync filesystems twice
log "ðŸ’¾ Syncing filesystems..."
sync
sleep 0.2
sync

log "âœ… Graceful shutdown complete, rebooting..."

# Reboot
exec systemctl reboot
