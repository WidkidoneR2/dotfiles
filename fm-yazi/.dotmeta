[package]
name = "fm-yazi"
version = "2.0.0"
description = "Yazi file manager with 14 instant teleports"
category = "tools"

[changelog]
"2.0.0" = "Tokyo Night theme, 14 teleport keybindings, complete customization"
"1.0.0" = "Initial Yazi configuration"

[files]
managed = [
    ".config/yazi/yazi.toml",
    ".config/yazi/keymap.toml",
    ".config/yazi/theme.toml",
    ".config/yazi/init.lua",
    ".config/yazi/README.md"
]

[dependencies]
requires = []
optional = ["wm-hypr"]

[metadata]
last_updated = "2025-12-17"
author = "Christian"
blast_radius = "medium"

[blast_impact]
failure_modes = [
    "File manager not functional",
    "Lost teleport keybindings",
    "Theme broken",
    "Reduced navigation efficiency"
]
recovery_path = "git restore fm-yazi/ && exec fish"

[retention]
rarely_used = false
justification = "Primary file manager with instant navigation system"
review_date = ""
